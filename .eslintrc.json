{
  "env": {
    "browser": true,
    "es2021": true,
    "serviceworker": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-undef": "error",
    "semi": ["warn", "always"],
    "quotes": ["warn", "single", { "avoidEscape": true }],
    "indent": ["warn", 2, { "SwitchCase": 1 }],
    "eqeqeq": ["warn", "always"],
    "curly": ["warn", "all"],
    "brace-style": ["warn", "1tbs"],
    "no-var": "error",
    "prefer-const": "warn"
  },
  "globals": {
    "GAME_VERSION": "readonly",
    "PLAYER_WIDTH": "readonly",
    "PLAYER_HEIGHT": "readonly",
    "ITEM_SIZE": "readonly",
    "PLAYER_SPEED": "readonly",
    "INITIAL_FALL_SPEED": "readonly",
    "INITIAL_SPAWN_INTERVAL": "readonly",
    "DIFFICULTY_INTERVAL": "readonly",
    "SPEED_INCREMENT": "readonly",
    "SPAWN_DECREMENT": "readonly",
    "MIN_SPAWN_INTERVAL": "readonly",
    "MAX_LIVES": "readonly",
    "FOOD_TYPES": "readonly",
    "POWER_UP_TYPES": "readonly",
    "ACHIEVEMENTS": "readonly",
    "GAME_MODES": "readonly",
    "SPRITE_NAMES": "readonly",
    "isMobile": "readonly",
    "vibrate": "readonly",
    "pixelPerfectCollision": "readonly",
    "getRandomItem": "readonly",
    "formatTime": "readonly",
    "clamp": "readonly",
    "lerp": "readonly",
    "loadAudio": "readonly",
    "playSound": "readonly",
    "toggleMute": "readonly",
    "isMuted": "readonly",
    "createSpriteSheet": "readonly",
    "getFoodSprite": "readonly",
    "getPlayerSprite": "readonly",
    "getBackgroundSprite": "readonly",
    "loadStorage": "readonly",
    "saveStorage": "readonly",
    "clearStorage": "readonly",
    "createParticles": "writable",
    "updateParticles": "readonly",
    "drawParticles": "readonly",
    "particles": "writable",
    "screenShake": "writable",
    "initGame": "readonly",
    "startGame": "writable",
    "pauseGame": "readonly",
    "resumeGame": "readonly",
    "endGame": "readonly",
    "gameState": "readonly",
    "initUI": "readonly",
    "updateUI": "readonly",
    "showScreen": "readonly",
    "hideScreen": "readonly",
    "initInput": "readonly",
    "canvas": "readonly",
    "ctx": "readonly",
    "player": "writable",
    "items": "writable",
    "score": "writable",
    "lives": "writable",
    "gameOver": "writable",
    "fallSpeed": "writable",
    "spawnInterval": "writable",
    "lastSpawn": "writable",
    "lastDifficulty": "writable",
    "gameStartTime": "writable",
    "keys": "writable",
    "animFrameId": "writable",
    "combo": "writable",
    "comboTimer": "writable",
    "maxCombo": "writable",
    "activePowerUps": "writable",
    "lastPowerUpSpawn": "writable",
    "stats": "writable",
    "unlockedAchievements": "writable",
    "newAchievements": "writable",
    "paused": "writable",
    "showPauseMenu": "writable",
    "tiltEnabled": "writable",
    "pauseStartTime": "writable",
    "currentMode": "writable",
    "showModeSelect": "writable",
    "showTutorial": "writable",
    "tutorialStep": "writable",
    "tutorialFromPause": "writable",
    "playerName": "writable",
    "highScoreSaved": "writable",
    "highScores": "writable",
    "pointerX": "writable",
    "touchStartX": "writable",
    "tiltX": "writable",
    "soundEnabled": "writable",
    "loadAssets": "readonly",
    "alphaMasks": "readonly",
    "sprites": "readonly",
    "draw": "readonly",
    "loadStats": "readonly",
    "saveStats": "readonly",
    "loadSettings": "readonly",
    "saveSettings": "readonly",
    "loadLeaderboard": "readonly",
    "saveLeaderboard": "readonly",
    "addHighScore": "readonly",
    "isHighScore": "readonly",
    "hasSeenTutorial": "readonly",
    "markTutorialSeen": "readonly",
    "loadAchievements": "readonly",
    "saveAchievements": "readonly",
    "togglePause": "readonly"
  }
}
